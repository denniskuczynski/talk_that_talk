<form class="form-horizontal" id="new_suggestion">

  <div class="control-group">
    <label class="control-label" for="suggestion_concept">Concept</label>
    <div class="controls">
      <input id="suggestion_concept" name="concept" size="30" type="text">
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="suggestion_description">Description</label>
    <div class="controls">
      <textarea cols="40" id="suggestion_description" name="description" rows="20"></textarea>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <input class="btn" name="commit" type="submit" value="Create">
    </div>
  </div>

</form>